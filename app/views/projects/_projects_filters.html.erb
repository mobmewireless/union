<%= form_tag(projects_url, method: 'get', class: 'form-horizontal', role: 'form') do %>
  <div class="form-group">
    <%= label_tag :not_deployed_for, 'Not deployed for', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= select_tag :not_deployed_for, options_for_select(
        [
          ['6 months', 6.months.ago],
          ['1 year', 12.months.ago],
          ['1 year and 6 months', 18.months.ago],
          ['2 years', 24.months.ago],
          ['Forever', Time.at(0)]
        ]
      ), class: 'form-control' %>
      <p class="help-block"><span class="label label-info">Note</span> Listed projects will contain at least one deployment that hasn't been processed in selected time period, but may contain other deployments that have. Check project page for more details.</p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag 'Filter', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>